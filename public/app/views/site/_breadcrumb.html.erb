<% if @breadcrumbs and not @breadcrumbs.empty? %>
  <div class="row-fluid">
    <div class="span12">
      <ul class="breadcrumb">
        <% @breadcrumbs.each_with_index do |crumb, i| %>
          <% if i < @breadcrumbs.length - 1%>
            <li>
              <%= icon_for crumb[2] %> 
          <%#use non greedy regex with ? mark to remove all html tags including attributes by Mang 0509015%>
              <%= link_to truncate(crumb[0].gsub(/<.*?>/,'')), crumb[1] %><span class="divider">/</span>
            </li>
          <% else %>
          <%#use non greedy regex with ? mark to remove all html tags including attributes by Mang 0509015%>
            <li class="active"><%= icon_for crumb[2] %> <%= truncate(crumb[0].gsub(/<.*?>/,'')) %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
